<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="395dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:background="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        app:srcCompat="@android:drawable/menu_full_frame" />

    <View
        android:id="@+id/view"
        android:layout_width="380dp"
        android:layout_height="593dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/notaum"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#FFFCFC"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="Insira a primeira nota"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/notadois"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#FFFCFC"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="Insira a segunda nota"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notaum"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/notatres"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#FFFCFC"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="Insira a terceira nota"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notadois"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/notaquatro"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:background="@color/cardview_light_background"
        android:backgroundTint="#FFFCFC"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="Insira a quarta nota"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notatres"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/botao_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="MÃ©dia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notaquatro"
        app:layout_constraintVertical_bias="0.074"
        android:onClick="calcularMedia" />


    <TextView
        android:id="@+id/resultado_media"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_media"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Button_Reset"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:text="Reset"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_popup_sync"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado_media"
        app:layout_constraintVertical_bias="0.288" />

</androidx.constraintlayout.widget.ConstraintLayout>